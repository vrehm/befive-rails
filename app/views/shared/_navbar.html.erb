<div class="navbar-blue">
  <!-- Logo -->
  <%= link_to pages_dashboard_path, class: "navbar-brand" do %>
    <%= image_tag "logo-befive.png" %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-right hidden-xs hidden-sm">

    <!-- Different navigation if login or not -->
    <% if user_signed_in? %>

      <!-- Text link -->
      <%= link_to "#", class: "navbar-item navbar-link" do %>
        <i class="fa fa-envelope" aria-hidden="true"></i>
      <% end %>

      <!-- Text link -->
      <%= link_to "#", class: "navbar-item navbar-link" do %>
        <i class="fa fa-bell" aria-hidden="true"></i>
      <% end %>

      <!-- Profile picture and dropdown -->
      <div class="navbar-item">
        <div class="dropdown">
          <%= image_tag "user-grey.svg", class: "avatar navbar-img-user" %>
          <%= link_to "#", class: "dropdown-toggle navbar-link navbar-link-user", id: "navbar-menu", "data-toggle" => "dropdown" do %>
            Hedi <i class="fa fa-caret-down" aria-hidden="true"></i>
          <% end %>
          <ul class="dropdown-menu dropdown-menu-right navbar-dropdown-menu">
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
              <% end %>
            </li>
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-home"></i>  <%= t(".profile", default: "Home") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>

    <% end %>

  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle white" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-dropdown-menu">
        <li><a href="#">Some mobile link</a></li>
        <li><a href="#">Other one</a></li>
        <li><a href="#">Other one</a></li>
      </ul>
    </div>
  </div>
</div>
