<%= simple_form_for(@event) do |f| %>
  <%= f.error_notification %>
  <%= f.input :category, collection: ["Match de Ligue", "Match Amical", "Tournoi", "Entrainement", "Autre"], label: "Type d'évenement", prompt: "Selectionner un évenement" %>
  <%= f.input :location_id, collection: @locations, label_method: :name, value_method: :id, label: "Lieu", include_blank: false, prompt: "Selectionner un centre"%>
  <%= f.input :address, label: "Adresse" %>
  <%= f.input :date, :as => :string, :input_html => { :class => 'datepicker' } %>
  <%= f.input :time, label: "Heure", :default => {:hour => '20', :minute => '00'}, :minute_step => 15 %>
  <br>
  <div class="text-center">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>
