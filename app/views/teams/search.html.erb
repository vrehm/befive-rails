<div class="search-wrapper">
  <div class="search-left-container">
    <%= render "/cards/profile-card" %>
    <br>
    <%= render "/cards/infos-card" %>
  </div>
  <div class="search-center-container">
    <form action="/teams/search" class="search">
      <input type="text" name="query" class="search-input" placeholder="Rechercher une équipe par nom, ville, centre...">
      <button type="submit" class="btn btn-primary text-small ">
        <i class="fa fa-search"></i> <span>Rechercher</span>
      </button>
    </form>
    <p class="text-small grey-dark search-results"><%= @search_results.count %> Résultats pour "<%= @search_params.capitalize %>"</p>
    <% @search_results.each do |team| %>
      <%= render 'cards/team-card-large', team: team %>
      <br>
    <% end %>
  </div>
  <div class="search-right-container">
    <div class="card text-center">
      <div class="title-card">
        <h6 class="uppercase">réseau</h6>
      </div>
      <br>
      <br>
    </div>
  </div>
  <br>
  <br>
  <%= will_paginate @search_results, class: "pagination" %>
</div>
