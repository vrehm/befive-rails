        <%= simple_form_for [ @user, @message ] do |f| %>
          <div class="modal-message-content">
            <p class="text-center grey-dark">Envoyer un message par mail <br>Ã  <%= @user.first_name %> </p>
            <br>
            <%= f.input :content, label: "Message" %>
          </div>
          <div class="text-center">
            <br>
            <%= f.button :submit, "Envoyer", class: "btn btn-primary" %>
            <br>
            <br>
