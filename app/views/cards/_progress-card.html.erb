<% if current_user.manager %>
  <div class="card">
    <div class="progress progress-bar-custom">
      <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100" style="width: 33%">
        <span class="sr-only">33% Complete</span>
      </div>
    </div>
    <hr>
    <p class="step-done text-small text-semi-bold"> <i class="fa fa-check-circle green text-large icon" aria-hidden="true"></i> Créez votre équipe</p>
    <hr>
    <p class="step text-small text-semi-bold"> <i class="fa fa-check-circle grey-normal text-large icon" aria-hidden="true"></i> Invitez vos membres</p>
    <hr>
    <p class="step text-small text-semi-bold"> <i class="fa fa-check-circle grey-normal text-large icon" aria-hidden="true"></i> Créez un nouvel évenement</p>
    <hr>
  </div>
<% else %>
  <% if current_user.city =! nil && current_user.avatar && current_user.position %>

  <% else %>
  <div class="card">
    <div class="progress progress-bar-custom">
      <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100" style="width: 50%">
        <span class="sr-only">50% Complete</span>
      </div>
    </div>
    <hr>
    <p class="step-done text-small text-semi-bold"> <i class="fa fa-check-circle green text-large icon" aria-hidden="true"></i> Rejoignez une équipe</p>
    <hr>
    <%= link_to edit_user_registration_path(current_user), class: "link-unstyled" do %>
      <p class="step text-small text-semi-bold"> <i class="fa fa-check-circle grey-normal text-large icon" aria-hidden="true"></i> Complétez votre profil</p>
    <% end %>
    <hr>
  </div>
  <% end %>
<% end %>
