<% if current_user.manager %>
  <% if current_user.teams.first.invitations.count > 0 && current_user.events.size == 0 %>
    <div class="card">
      <div class="progress progress-bar-custom">
        <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100" style="width: 66%">
          <span class="sr-only">66% Complete</span>
        </div>
      </div>
      <hr>
      <p class="step-done text-small text-semi-bold"> <i class="fa fa-check-circle green text-large icon" aria-hidden="true"></i> Créez votre équipe</p>
      <hr>
      <% if policy(@invitation).create? %>
        <%= link_to team_path(current_user.teams.first), class: "link-unstyled" do %>
          <p class="step-done text-small text-semi-bold"> <i class="fa fa-check-circle green text-large icon" aria-hidden="true"></i> Invitez vos membres</p>
        <% end %>
      <% end %>
      <hr>
      <% if policy(Event).create? %>
        <%= link_to new_event_path, class: "link-unstyled" do %>
        <p class="step text-small text-semi-bold"> <i class="fa fa-check-circle grey-normal text-large icon" aria-hidden="true"></i> Créez un nouvel évenement</p>
        <% end %>
      <% end %>
      <hr>
    </div>
    <% elsif current_user.teams.first.invitations.count == 0 && current_user.events.size > 0 %>
    <div class="card">
      <div class="progress progress-bar-custom">
        <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100" style="width: 66%">
          <span class="sr-only">66% Complete</span>
        </div>
      </div>
      <hr>
      <p class="step-done text-small text-semi-bold"> <i class="fa fa-check-circle green text-large icon" aria-hidden="true"></i> Créez votre équipe</p>
      <hr>
      <% if policy(@invitation).create? %>
        <%= link_to team_path(current_user.teams.first), class: "link-unstyled" do %>
          <p class="step text-small text-semi-bold"> <i class="fa fa-check-circle green text-large icon" aria-hidden="true"></i> Invitez vos membres</p>
        <% end %>
      <% end %>
      <hr>
      <p class="step-done text-small text-semi-bold"> <i class="fa fa-check-circle grey-normal text-large icon" aria-hidden="true"></i> Créez un nouvel évenement</p>
      <hr>
    </div>
    <% elsif current_user.teams.first.invitations.count == 0 && current_user.events.size == 0 %>
    <div class="card">
      <div class="progress progress-bar-custom">
        <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100" style="width: 33%">
          <span class="sr-only">33% Complete</span>
        </div>
      </div>
      <hr>
      <p class="step-done text-small text-semi-bold"> <i class="fa fa-check-circle green text-large icon" aria-hidden="true"></i> Créez votre équipe</p>
      <hr>
      <% if policy(@invitation).create? %>
        <%= link_to team_path(current_user.teams.first), class: "link-unstyled" do %>
          <p class="step text-small text-semi-bold"> <i class="fa fa-check-circle grey-normal text-large icon" aria-hidden="true"></i> Invitez vos membres</p>
        <% end %>
      <% end %>
      <hr>
      <% if policy(Event).create? %>
        <%= link_to new_event_path, class: "link-unstyled" do %>
        <p class="step text-small text-semi-bold"> <i class="fa fa-check-circle grey-normal text-large icon" aria-hidden="true"></i> Créez un nouvel évenement</p>
        <% end %>
      <% end %>
      <hr>
    </div>
  <% end %>
<% else %>
  <% if current_user.city == nil || current_user.avatar == nil || current_user.position == nil %>
    <div class="card">
      <div class="progress progress-bar-custom">
        <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100" style="width: 50%">
          <span class="sr-only">50% Complete</span>
        </div>
      </div>
      <hr>
      <p class="step-done text-small text-semi-bold"> <i class="fa fa-check-circle green text-large icon" aria-hidden="true"></i> Rejoignez une équipe</p>
      <hr>
      <%= link_to edit_user_registration_path(current_user), class: "link-unstyled" do %>
        <p class="step text-small text-semi-bold"> <i class="fa fa-check-circle grey-normal text-large icon" aria-hidden="true"></i> Complétez votre profil</p>
      <% end %>
      <hr>
    </div>
    <br>
  <% end %>
<% end %>
