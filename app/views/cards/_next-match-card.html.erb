<div class="card">
  <div class="title-card text-center">
    <h6>PROCHAIN MATCH</h6>
    <% if policy(Event).create? %>
      <%= link_to new_event_path, class: "link-unstyled" do %>
        <i class="fa fa-plus-circle text-xl blue title-card-icon"></i>
      <% end %>
    <% end %>
  </div>
  <br>
  <br>
  <% if @next_event %>
    <%= link_to event_path(@next_event), class: "link-unstyled" do %>
      <div class="float-left">
        <div class="calendar-date-xs">
          <div class="month-xs">
            <%= @next_event.date.strftime("%b") %>.
          </div>
          <h5 class="day-xs"><%= @next_event.date.strftime("%e") %></h5>
        </div>
      </div>
      <div class="margin-left">
        <p class="blue-dark text-small margin-right">
          <%= @next_event.category %> à <%= @next_event.time.strftime("%H:%M") %>
          <% if @next_event.participations.where(user: current_user, pending: true).first %>
          <span class="text-small green"><i class="fa fa-question-circle grey-dark text-large margin-left" aria-hidden="true"></i></span>
          <% elsif @next_event.participations.where(user: current_user, validated: true).first %>
          <span class="text-small green"><i class="fa fa-check-circle green text-large margin-left" aria-hidden="true"></i></span>
          <% elsif @next_event.participations.where(user: current_user, refused: true).first %>
          <span class="text-small red"><i class="fa fa-minus-circle red text-large margin-left" aria-hidden="true"></i></span>
          <% end %>
        </p>
        <p class="grey-dark text-small line-height-s margin-right"> <%= @next_event.location.name.capitalize %> - <%= @next_event.address.capitalize[0..20] %></p>
      </div>
    <% end %>
  <% else %>
    <p class="blue-dark text-small text-center"><i class="fa fa-calendar icon blue text-large"></i> Aucun match de planifié</p>
  <% end %>
</div>
