<div class="card">
  <div class="title-card ">
    <%= link_to events_path, class: "btn btn-default text-small margin-left" do %>
      Tous les events <i class="fa fa-calendar blue margin-left" aria-hidden="true"></i>
    <% end %>
  </div>
  <br>
  <br>
  <div class="event">
    <div class="calendar-date">
      <div class="month">
        <%= @event.date.strftime("%b") %>.
      </div>
      <h4 class="day"><%= @event.date.strftime("%e") %></h4>
    </div>
    <%= image_tag @event.location.image, class: "float-right", style:"width: 80px" %>
    <div class="event-info">
      <h4 class="uppercase">
        <%= @event.category %>
        <% if policy(@event).update? %>
          <%= link_to edit_event_path(@event), class: "link-unstyled" do %>
            <i class="fa fa-pencil text-large margin-left"></i>
          <% end %>
          <%= link_to event_path(@event), class: "link-unstyled", method: :delete, data: { confirm: "Etes vous sur de vouloir annuler cet évenement ?" } do %>
            <i class="fa fa-ban text-large red margin-left"></i>
          <% end %>
        <% end %>
      </h4>
      <p class="time"><%= @event.time.strftime("%l h %M") %></p>
      <br>
      <p class="grey-medium text-small">
        <span class="margin-right grey-dark"><i class="fa fa-map-marker text-large icon margin-left" aria-hidden="true"></i>
         Lieu: </span> <%= @event.location.name.capitalize %>
      </p>
      <hr>
      <p class="grey-medium text-small">
        <span class="margin-right grey-dark"><i class="fa fa-calendar text-large icon margin-left" aria-hidden="true"></i>
         Date: </span><%= @event.date.strftime("%e %b %Y") %>
      </p>
      <hr>
      <p class="grey-medium text-small">
        <span class="margin-right grey-dark"><i class="fa fa-bullhorn text-large icon" aria-hidden="true"></i>
         Réponses: </span>
         0 <i class="fa fa-check-circle green text-large icon margin-left" aria-hidden="true"></i>
         0 <i class="fa fa-minus-circle red text-large icon margin-left" aria-hidden="true"></i>
         0 <i class="fa fa-question-circle grey-normal text-large icon margin-left" aria-hidden="true"></i>
      </p>
      <hr>
      <br>
      <h6 class="uppercase">serez vous présent ?</h6>
      <%= link_to "#", class: "btn btn-default text-small margin-right" do %>
        Refuser <i class="fa fa-minus-circle red text-large margin-left" aria-hidden="true"></i>
      <% end %>
      <%= link_to "#", class: "btn btn-success text-small" do %>
        Accepter <i class="fa fa-check-circle white text-large margin-left" aria-hidden="true"></i>
      <% end %>
    </div>
  </div>
</div>
