<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0), rgba(0,0,0,0)), url(<%= image_path "background.png" %>);">
    <div class="container">
      <div class="row">
        <div class="col-sm-6 col-sm-offset-3">
          <div class="card-form">
            <h3 class= "text-center">Inscription</h3>
            <br>
            <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= f.error_notification %>

              <div class="form-inputs">
                <%= f.input :email, required: false, placeholder: "Email", label: false %>
                <%= f.input :first_name, placeholder: "PrÃ©nom", label: false %>
                <%= f.input :last_name, placeholder: "Nom", label: false %>
                <%= f.input :password, required: false, placeholder: "Entrer votre mot de passe", label: "Mot de passe"  %>
                <%= f.input :password_confirmation, required: false, placeholder: "Confirmer votre mot de passe", label: false %>
                <br>
              </div>
              <div class="form-actions">
                <%= f.button :submit, "Inscription", class: "btn btn-lg btn-success" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
